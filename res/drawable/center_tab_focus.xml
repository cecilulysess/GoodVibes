<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- draw tab background -->
	<item android:top="0sp" android:bottom="0sp">
		<shape android:shape="rectangle">
			<solid android:color="@color/centerTabBgColor" />
			
		</shape>
	</item>
	<item android:left="0sp" android:top="0sp"
                android:right="0sp" android:bottom="0sp"> 
		<shape android:shape="rectangle">
			<corners android:bottomLeftRadius="@dimen/corner_radius_zero"
				android:bottomRightRadius="@dimen/corner_radius_zero" 
				android:topLeftRadius="@dimen/corner_radius_zero"
				android:topRightRadius="@dimen/corner_radius_zero"
				/>
			<gradient android:angle="-90" android:startColor="@color/centerTabPressed"
			
				android:endColor="@color/centerTabPressed" />
			
		</shape>
	</item>
</layer-list>